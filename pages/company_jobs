<?php
session_start();
include "../config/database.php";

if (!isset($_SESSION['company_id'])) {
    header("Location: company_login.php");
    exit();
}

$company_id = $_SESSION['company_id'];
$result = mysqli_query($conn, "SELECT * FROM jobs WHERE company_id='$company_id' ORDER BY posted_at DESC");
?>

<!DOCTYPE html>
<html>
<head>
    <title>My Jobs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <h3>My Posted Jobs</h3>
    <a href="company_dashboard.php" class="btn btn-outline-secondary mb-3">Back to Dashboard</a>

    <?php while ($job = mysqli_fetch_assoc($result)) { ?>
        <div class="card mb-3 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title"><?= $job['title'] ?></h5>
                    <span class="badge bg-info"><?= $job['job_type'] ?></span>
                    <span class="badge bg-<?= $job['is_active'] ? 'success' : 'secondary' ?>">
                        <?= $job['is_active'] ? 'Active' : 'Inactive' ?>
                    </span>
                    <p class="card-text mt-2 text-muted small">ID: <?= $job['job_id'] ?></p>
                </div>
                <div>
                    <a href="toggle_job.php?id=<?= $job['job_id'] ?>" 
                       class="btn btn-sm btn-warning">
                        <?= $job['is_active'] ? 'Deactivate' : 'Activate' ?>
                    </a>
                </div>
            </div>
        </div>
    <?php } ?>
</div>
</body>
</html>